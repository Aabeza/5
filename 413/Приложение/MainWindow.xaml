        <ComboBox HorizontalAlignment="Left" Margin="38,592,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="38,631,0,0" TextWrapping="Wrap" Text="Ответ на вопрос" VerticalAlignment="Top" Width="120"/>
        <CheckBox Content="Согласен с условиями" HorizontalAlignment="Left" Margin="35,676,0,0" VerticalAlignment="Top" Checked="CheckBox_Checked"/>
        <Button Content="Войти" HorizontalAlignment="Left" Margin="44,714,0,0" VerticalAlignment="Top" Width="143" Click="Button_Click_2"/>

    </Grid>
</Window>
