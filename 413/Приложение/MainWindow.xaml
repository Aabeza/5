        <TextBox HorizontalAlignment="Left" Margin="38,124,0,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top" Width="120"/>
        <Label Content="E-mail (почта)" HorizontalAlignment="Left" Margin="38,156,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox HorizontalAlignment="Left" Margin="38,195,0,0" TextWrapping="Wrap" Text="example@mail.ru" VerticalAlignment="Top" Width="120"/>
