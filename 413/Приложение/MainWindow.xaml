        <Label Content="Кодовое слово (одно слово)" HorizontalAlignment="Left" Margin="35,441,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="38,472,0,0" TextWrapping="Wrap" Text="Кодовое Слово" VerticalAlignment="Top" Width="120"/>
        <Label Content="Условие пароля 1" HorizontalAlignment="Left" Margin="215,309,0,0" VerticalAlignment="Top"/>
        <Label Content="Условие пароля 2" HorizontalAlignment="Left" Margin="215,340,0,0" VerticalAlignment="Top"/>
        <Label Content="Условие пароля 3" HorizontalAlignment="Left" Margin="215,366,0,0" VerticalAlignment="Top"/>
        <Label Content="Условие пароля 4" HorizontalAlignment="Left" Margin="215,392,0,0" VerticalAlignment="Top"/>
